<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- SELECT AN ALBUM -->

    <TextView
        android:id="@+id/textViewSelectAlbumTitle"
        style="@style/textViewTtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_an_album" >
    </TextView>

    <!-- DEFAULT -->

    <TextView
        android:id="@+id/textViewDefaultTitle"
        style="@style/textViewSecondaryTtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_default" />

    <!-- DEFAULT SERVICES CONTENT -->

    <LinearLayout
        android:id="@+id/linearLayoutServicesContent"
        style="@style/linearLayoutServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- CAMERA SHOTS -->

        <LinearLayout
            android:id="@+id/linearLayoutCameraShots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewCameraShots"
                style="@style/imageViewServices" />

            <TextView
                android:id="@+id/textViewCameraShots"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/camera_shots" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerCameraShots"
            style="@style/dividerLine" />

        <!-- ALL PHOTOS -->

        <LinearLayout
            android:id="@+id/linearLayoutAllPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewAllPhotos"
                style="@style/imageViewServices" />

            <TextView
                android:id="@+id/textViewAllPhotos"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/all_photos" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerAllPhotos"
            style="@style/dividerLine" />

        <!-- LAST PHOTO TAKEN -->

        <LinearLayout
            android:id="@+id/linearLayoutLastPhotoTaken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewLastPhotoTaken"
                style="@style/imageViewServices" />

            <TextView
                android:id="@+id/textViewLastPhotoTaken"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/last_photo" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerLastPhotoTaken"
            style="@style/dividerLine" />

        <!-- TAKE A PHOTO -->

        <LinearLayout
            android:id="@+id/linearLayoutTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewTakePhoto"
                style="@style/imageViewTakePhoto" />

            <TextView
                android:id="@+id/textViewTakePhoto"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/take_photos" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerTakePhoto"
            style="@style/dividerLine" />
    </LinearLayout>

    <!-- USER -->

    <TextView
        android:id="@+id/textViewUserTitle"
        style="@style/textViewSecondaryTtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_user" />

    <!-- SOCIAL SERVICES CONTENT -->

    <LinearLayout
        android:id="@+id/linearLayoutSocialServicesContent"
        style="@style/linearLayoutServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- FACEBOOK -->

        <LinearLayout
            android:id="@+id/linearLayoutFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewFacebook"
                style="@style/imageViewFacebook" />

            <TextView
                android:id="@+id/textViewFacebook"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/facebook" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerFacebook"
            style="@style/dividerLine" />

        <!-- FLICKR -->

        <LinearLayout
            android:id="@+id/linearLayoutFlickr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewFlickr"
                style="@style/imageViewFlickr" />

            <TextView
                android:id="@+id/textViewFlickr"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/flickr" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerFlickr"
            style="@style/dividerLine" />

        <!-- INSTAGRAM -->

        <LinearLayout
            android:id="@+id/linearLayoutInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewInstagram"
                style="@style/imageViewInstagram" />

            <TextView
                android:id="@+id/textViewInstagram"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/instagram" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerInstagram"
            style="@style/dividerLine" />

        <!-- PICASA -->

        <LinearLayout
            android:id="@+id/linearLayoutPicasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewPicasa"
                style="@style/imageViewPicasa" />

            <TextView
                android:id="@+id/textViewPicasa"
                style="@style/textViewServiceNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/picasa" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dividerPicasa"
            style="@style/dividerLine" />
    </LinearLayout>

</LinearLayout>